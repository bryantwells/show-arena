{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "react-app"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": [ "error", 4, { "SwitchCase": 1 } ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [  "error", "single" ],
        "semi": [ "error", "never" ],
        "no-console": [ "off" ],
        "import/no-webpack-loader-syntax": ["off"]
    }
}